extends layout

block content

  .input
    include header
    .col-xs-12.col-md-6.col-md-offset-3
        .section
          .list-header
              .list-title
                b PATIENTS
          .list-body
            .sub-body
              table.patient-table
                tr
                  th NO
                  th ID
                  th NAME
                  th GENDER
                  th BIRTHDAY
                - var n = users.length
                - for( var i = 0; i < n; i++){                  
                tr
                  td= i+1
                  td
                    a(href="/personal/" + users[i]._id)= users[i]._id
                  td= users[i].local.name
                  td= users[i].local.gender
                  td= users[i].local.birthday
                - }
